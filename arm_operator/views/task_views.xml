<odoo>
    <data noupdate="1">
        <record id="action_operator_task" model="ir.actions.act_window">
            <field name="name">Задания АРМ</field>
            <field name="res_model">arm.operator.task</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="view_operator_task_list" model="ir.ui.view">
            <field name="name">arm.operator.task.list</field>
            <field name="model">arm.operator.task</field>
            <field name="arch" type="xml">
                <list string="Task List">
                    <field name="name"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="view_operator_task_form" model="ir.ui.view">
            <field name="name">arm.operator.task.form</field>
            <field name="model">arm.operator.task</field>
            <field name="arch" type="xml">
                <form string="Task Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <menuitem id="menu_root_arm_operator" name="АРМ Оператора" sequence="10"/>
        <menuitem id="menu_operator_tasks" name="Задания" parent="menu_root_arm_operator" action="action_operator_task"/>
    </data>
</odoo>